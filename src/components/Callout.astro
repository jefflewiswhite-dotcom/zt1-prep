---
interface Props {
  type?: 'info' | 'tip' | 'warning' | 'danger';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: {
    bg: 'bg-slate-50',
    border: 'border-slate-200',
    icon: 'text-slate-600',
    title: 'text-slate-900',
  },
  tip: {
    bg: 'bg-forest-50',
    border: 'border-forest-200',
    icon: 'text-forest-600',
    title: 'text-forest-900',
  },
  warning: {
    bg: 'bg-amber-50',
    border: 'border-amber-200',
    icon: 'text-amber-600',
    title: 'text-amber-900',
  },
  danger: {
    bg: 'bg-red-50',
    border: 'border-red-200',
    icon: 'text-red-600',
    title: 'text-red-900',
  },
};

const s = styles[type];

const icons = {
  info: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
  tip: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />',
  warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />',
  danger: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />',
};

const defaultTitles = {
  info: 'Note',
  tip: 'Pro Tip',
  warning: 'Warning',
  danger: 'Important',
};
---

<div class:list={['rounded-lg border p-4 my-6', s.bg, s.border]}>
  <div class="flex items-start gap-3">
    <div class="flex-shrink-0 mt-0.5">
      <svg class:list={['w-5 h-5', s.icon]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <Fragment set:html={icons[type]} />
      </svg>
    </div>
    <div class="flex-grow">
      {(title || defaultTitles[type]) && (
        <p class:list={['font-semibold mb-1', s.title]}>
          {title || defaultTitles[type]}
        </p>
      )}
      <div class="text-stone-700 text-sm [&>p]:mb-0">
        <slot />
      </div>
    </div>
  </div>
</div>
