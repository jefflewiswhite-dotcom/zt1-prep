---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="text-sm">
  <ol class="flex items-center flex-wrap gap-1">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="w-4 h-4 text-stone-400 mx-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        )}
        {item.href ? (
          <a href={item.href} class="text-stone-500 hover:text-forest-700 transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-stone-700 font-medium truncate max-w-[200px]" title={item.label}>
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>
