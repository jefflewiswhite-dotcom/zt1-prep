---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => data.category === 'comparisons');

const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);
---

<BaseLayout
  title="Product Comparisons"
  description="Head-to-head comparisons of survival gear and emergency preparedness equipment. Find out which option is right for your needs."
>
  <main class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-stone-900 mb-4">Comparisons</h1>
      <p class="text-xl text-stone-600 max-w-3xl">
        Head-to-head comparisons to help you choose between similar products and approaches. We break down the pros, cons, and best use cases for each option.
      </p>
    </div>

    <!-- Comparison Posts -->
    <div class="grid md:grid-cols-2 gap-6">
      {sortedPosts.map((post) => (
        <article class="bg-white border border-stone-200 rounded-xl overflow-hidden hover:shadow-md transition-shadow">
          <a href={`/comparisons/${post.slug}/`} class="block p-6">
            <div class="flex items-center gap-2 mb-3">
              <span class="text-xs font-medium px-2 py-1 rounded bg-slate-100 text-slate-800">
                Comparison
              </span>
            </div>
            <h3 class="text-xl font-semibold text-stone-900 mb-3 hover:text-forest-700 transition-colors">
              {post.data.title}
            </h3>
            <p class="text-stone-600">
              {post.data.description}
            </p>
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.tags.slice(0, 4).map((tag) => (
                <span class="text-xs text-stone-500 bg-stone-100 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        </article>
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <p class="text-stone-600 text-center py-12">No comparisons available yet. Check back soon!</p>
    )}
  </main>
</BaseLayout>
