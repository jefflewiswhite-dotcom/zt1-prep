              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-1">Food Storage</h3>
            <p class="text-stone-200 text-sm">Build a long-term food pantry for emergencies.</p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Gear Categories -->
  <section class="py-16 bg-stone-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl font-bold text-stone-900 mb-8">Essential Gear Guides</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Water Filters -->
        <a href="/gear/best-water-filters-bug-out-bag/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Water Filters</h3>
          <p class="text-stone-600 text-sm">Portable filtration for safe drinking water.</p>
        </a>

        <!-- Flashlights -->
        <a href="/gear/best-flashlights-bug-out-bag/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Flashlights</h3>
          <p class="text-stone-600 text-sm">Tactical lights and headlamps.</p>
        </a>

        <!-- Lanterns -->
        <a href="/gear/best-rechargeable-lanterns/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Lanterns</h3>
          <p class="text-stone-600 text-sm">Rechargeable lights for power outages.</p>
        </a>

        <!-- First Aid -->
        <a href="/gear/best-first-aid-kits-bug-out-bag/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">First Aid Kits</h3>
          <p class="text-stone-600 text-sm">Medical supplies for emergencies.</p>
        </a>

        <!-- Knives -->
        <a href="/gear/best-survival-knives/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Survival Knives</h3>
          <p class="text-stone-600 text-sm">Fixed blades for any situation.</p>
        </a>

        <!-- Multitools -->
        <a href="/gear/best-multitools-bug-out-bag/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Multitools</h3>
          <p class="text-stone-600 text-sm">Versatile tools for any task.</p>
        </a>

        <!-- Tarps -->
        <a href="/gear/best-emergency-tarps/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Tarps & Shelter</h3>
          <p class="text-stone-600 text-sm">Emergency shelter options.</p>
        </a>

        <!-- Fire Extinguishers -->
        <a href="/gear/best-fire-extinguishers/" class="group block p-4 bg-white rounded-lg hover:shadow-md transition-shadow border border-stone-200">
          <h3 class="font-semibold text-stone-900 mb-1 group-hover:text-forest-700">Fire Extinguishers</h3>
          <p class="text-stone-600 text-sm">Home and vehicle fire safety.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  <section class="py-16 bg-stone-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold text-stone-900">Latest Articles</h2>
        <a href="/guides/" class="text-forest-600 hover:text-forest-700 font-medium">
          View all â†’
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map((post) => {
          const style = categoryStyles[post.data.category] || categoryStyles.guides;
          const imageSrc = post.data.image?.src || `/images/placeholder-${post.data.category}.png`;
          const imageAlt = post.data.image?.alt || post.data.title;
          return (
            <article class="bg-white rounded-xl border border-stone-200 overflow-hidden hover:shadow-lg transition-shadow group">
              <a href={getPostUrl(post)} class="block">
                <!-- Article Thumbnail -->
                <div class="aspect-[16/9] overflow-hidden bg-stone-200">
                  <img
                    src={imageSrc}
                    alt={imageAlt}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    onerror="this.src='/images/placeholder-default.png'"
                  />
                </div>
                <div class="p-5">
                  <div class="flex items-center gap-2 mb-3">
                    <span class={`text-xs font-medium px-2 py-1 rounded ${style.bg} ${style.text}`}>
                      {formatCategory(post.data.category)}
                    </span>
                    {post.data.contentType === 'pillar' && (
                      <span class="text-xs font-medium px-2 py-1 rounded bg-forest-100 text-forest-800">
                        Guide
                      </span>
                    )}
                  </div>
                  <h3 class="text-lg font-semibold text-stone-900 mb-2 group-hover:text-forest-700 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-stone-600 text-sm line-clamp-2">
                    {post.data.description}
                  </p>
                </div>
              </a>
            </article>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-forest-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-forest-100 mb-8">
        Building preparedness doesn't have to be overwhelming. Start with the basics and build from there.
      </p>
      <a
        href="/guides/start-here/"
        class="inline-flex items-center px-8 py-4 bg-white text-forest-700 font-semibold rounded-lg hover:bg-stone-100 transition-colors"
      >
        Read the Getting Started Guide
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
