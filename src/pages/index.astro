---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import siteData from '@/data/site.json';

// Get recent posts
const allPosts = await getCollection('posts');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf())
  .slice(0, 6);

// Get pillar content
const pillarPosts = allPosts.filter(post => post.data.contentType === 'pillar');

// Helper to get post URL
function getPostUrl(post: typeof allPosts[0]) {
  const category = post.data.category;
  if (category === 'guides') return `/guides/${post.slug}/`;
  if (category === 'comparisons') return `/comparisons/${post.slug}/`;
  return `/gear/${post.slug}/`;
}

// Category icon mapping
const categoryStyles: Record<string, { bg: string; text: string }> = {
  guides: { bg: 'bg-forest-100', text: 'text-forest-800' },
  gear: { bg: 'bg-rust-100', text: 'text-rust-800' },
  comparisons: { bg: 'bg-slate-100', text: 'text-slate-800' },
  checklists: { bg: 'bg-stone-100', text: 'text-stone-800' },
};

// Helper to capitalize category for display
function formatCategory(category: string): string {
  return category.charAt(0).toUpperCase() + category.slice(1);
}
---

<BaseLayout
  title={siteData.name}
  description={siteData.description}
>
  <!-- Hero Section with Image -->
  <section class="relative bg-stone-900 text-white overflow-hidden">
    <!-- Hero Background Image -->
    <div class="absolute inset-0">
      <img
        src="/images/hero-bug-out-bag.png"
        alt="Emergency preparedness gear laid out"
        class="w-full h-full object-cover opacity-40"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-stone-900 via-stone-900/80 to-stone-900/60"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 py-20 sm:py-28">
      <div class="max-w-2xl">
        <p class="text-forest-400 font-semibold mb-3 uppercase tracking-wide text-sm">Emergency Preparedness</p>
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight mb-6">
          {siteData.tagline}
        </h1>
        <p class="text-xl text-stone-300 mb-8">
          {siteData.description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/guides/start-here/"
            class="inline-flex items-center px-6 py-3 bg-forest-600 hover:bg-forest-700 text-white font-semibold rounded-lg transition-colors"
          >
            Start Here
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="/guides/bug-out-bag/"
