---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import siteData from '@/data/site.json';

// Get recent posts
const allPosts = await getCollection('posts');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf())
  .slice(0, 6);

// Get pillar content
const pillarPosts = allPosts.filter(post => post.data.contentType === 'pillar');

// Helper to get post URL
function getPostUrl(post: typeof allPosts[0]) {
  const category = post.data.category;
  if (category === 'guides') return `/guides/${post.slug}/`;
  if (category === 'comparisons') return `/comparisons/${post.slug}/`;
  return `/gear/${post.slug}/`;
}

// Category icon mapping
const categoryStyles: Record<string, { bg: string; text: string }> = {
  guides: { bg: 'bg-forest-100', text: 'text-forest-800' },
  gear: { bg: 'bg-rust-100', text: 'text-rust-800' },
  comparisons: { bg: 'bg-slate-100', text: 'text-slate-800' },
  checklists: { bg: 'bg-stone-100', text: 'text-stone-800' },
};
---

<BaseLayout
  title={siteData.name}
  description={siteData.description}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-stone-900 to-stone-800 text-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 sm:py-24">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight mb-6">
          {siteData.tagline}
        </h1>
        <p class="text-xl text-stone-300 mb-8">
          {siteData.description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/guides/start-here/"
            class="inline-flex items-center px-6 py-3 bg-forest-600 hover:bg-forest-700 text-white font-semibold rounded-lg transition-colors"
          >
            Start Here
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="/guides/bug-out-bag/"
            class="inline-flex items-center px-6 py-3 bg-stone-700 hover:bg-stone-600 text-white font-semibold rounded-lg transition-colors"
          >
            Build a Bug Out Bag
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Hubs -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl font-bold text-stone-900 mb-8">Start Your Preparedness Journey</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Bug Out Bag Hub -->
        <a href="/guides/bug-out-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-forest-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-forest-200 transition-colors">
            <svg class="w-6 h-6 text-forest-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-forest-700 transition-colors">Bug Out Bag</h3>
          <p class="text-stone-600">Build a 72-hour emergency kit for when you need to leave quickly.</p>
        </a>

        <!-- Get Home Bag Hub -->
        <a href="/guides/get-home-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-rust-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-rust-200 transition-colors">
            <svg class="w-6 h-6 text-rust-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-rust-700 transition-colors">Get Home Bag</h3>
          <p class="text-stone-600">A compact kit for getting home safely when the unexpected happens.</p>
        </a>

        <!-- Water Hub -->
        <a href="/gear/best-water-filters-bug-out-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors">
            <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-blue-700 transition-colors">Water Filtration</h3>
          <p class="text-stone-600">Portable filters and purification for safe drinking water anywhere.</p>
        </a>

        <!-- Fire Hub -->
        <a href="/gear/best-fire-starters-bug-out-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-orange-200 transition-colors">
            <svg class="w-6 h-6 text-orange-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-orange-700 transition-colors">Fire Starting</h3>
          <p class="text-stone-600">Reliable methods to start fire in any conditions.</p>
        </a>

        <!-- Light Hub -->
        <a href="/gear/best-flashlights-bug-out-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-yellow-200 transition-colors">
            <svg class="w-6 h-6 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-yellow-700 transition-colors">Lighting</h3>
          <p class="text-stone-600">Flashlights and headlamps for when the power goes out.</p>
        </a>

        <!-- Medical Hub -->
        <a href="/gear/best-first-aid-kits-bug-out-bag/" class="group block p-6 bg-stone-50 rounded-xl hover:bg-stone-100 transition-colors border border-stone-200">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-red-200 transition-colors">
            <svg class="w-6 h-6 text-red-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-stone-900 mb-2 group-hover:text-red-700 transition-colors">First Aid</h3>
          <p class="text-stone-600">Medical supplies for injuries and health emergencies.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  <section class="py-16 bg-stone-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold text-stone-900">Latest Articles</h2>
        <a href="/guides/" class="text-forest-600 hover:text-forest-700 font-medium">
          View all â†’
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map((post) => {
          const style = categoryStyles[post.data.category] || categoryStyles.guides;
          return (
            <article class="bg-white rounded-xl border border-stone-200 overflow-hidden hover:shadow-lg transition-shadow">
              <a href={getPostUrl(post)} class="block p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class={`text-xs font-medium px-2 py-1 rounded ${style.bg} ${style.text}`}>
                    {post.data.category}
                  </span>
                  {post.data.contentType === 'pillar' && (
                    <span class="text-xs font-medium px-2 py-1 rounded bg-forest-100 text-forest-800">
                      Guide
                    </span>
                  )}
                </div>
                <h3 class="text-lg font-semibold text-stone-900 mb-2 hover:text-forest-700 transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-stone-600 text-sm line-clamp-2">
                  {post.data.description}
                </p>
              </a>
            </article>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-forest-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-forest-100 mb-8">
        Building preparedness doesn't have to be overwhelming. Start with the basics and build from there.
      </p>
      <a
        href="/guides/start-here/"
        class="inline-flex items-center px-8 py-4 bg-white text-forest-700 font-semibold rounded-lg hover:bg-stone-100 transition-colors"
      >
        Read the Getting Started Guide
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
