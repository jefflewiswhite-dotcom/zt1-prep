---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import siteData from '@/data/site.json';

// Get recent posts
const allPosts = await getCollection('posts');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf())
  .slice(0, 6);

// Get pillar content
const pillarPosts = allPosts.filter(post => post.data.contentType === 'pillar');

// Helper to get post URL
function getPostUrl(post: typeof allPosts[0]) {
  const category = post.data.category;
  if (category === 'guides') return `/guides/${post.slug}/`;
  if (category === 'comparisons') return `/comparisons/${post.slug}/`;
  return `/gear/${post.slug}/`;
}

// Category icon mapping
const categoryStyles: Record<string, { bg: string; text: string }> = {
  guides: { bg: 'bg-forest-100', text: 'text-forest-800' },
  gear: { bg: 'bg-rust-100', text: 'text-rust-800' },
  comparisons: { bg: 'bg-slate-100', text: 'text-slate-800' },
  checklists: { bg: 'bg-stone-100', text: 'text-stone-800' },
};

// Helper to capitalize category for display
function formatCategory(category: string): string {
  return category.charAt(0).toUpperCase() + category.slice(1);
}
